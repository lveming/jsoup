<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="@color/CardView_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/id_item_content_ImageView"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginRight="3dp"
                android:src="@mipmap/default_bg" />
            <TextView
                android:id="@+id/id_item_content_TextView_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/id_item_content_ImageView"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/id_item_content_TextView_Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_item_content_TextView_Title"
                android:layout_toRightOf="@id/id_item_content_ImageView"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="14sp"
                android:text=""
                android:textColor="@color/black_text"
                />
            <TextView
                android:id="@+id/id_item_content_TextView_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/id_item_content_ImageView"
                android:layout_below="@id/id_item_content_TextView_Content"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="@color/time_bg"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>